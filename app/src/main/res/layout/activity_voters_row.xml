<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="70dp"
    android:layout_width="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:id="@+id/relative_layout_voter_row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp">

            <ImageView
                android:id="@+id/voter_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:padding="2dp"
                android:src="@drawable/voter" />

            <TextView
                android:id="@+id/voter_uuid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="end"
                android:layout_alignParentTop="true"
                android:text="0x56495d2a4504c772985dd97ef9258ff4823451b52188045736d1d518b284af2c"
                android:layout_toRightOf="@+id/voter_icon"
                android:layout_marginRight="8dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
